                        res.render('dashboard');
                        } else {
                            console.error('Redirect URL not provided');
                            alert("Login failed. Please try again.");
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error(error);
                        // Handle login error (e.g., display error message)
